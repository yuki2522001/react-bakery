{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
      "react-hooks"
    ],
    "rules": {
    "semi": ["error", "always"], // require or disallow semicolons instead of ASI
    "@typescript-eslint/quotes": ["error", "double"], // enforce the consistent use of either backtick, double, or single quotes
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts", ".tsx"] }], // The set of allowed extensions is configurable.
    "react-hooks/rules-of-hooks": "error", // Checks rules of Hooks
    "react-hooks/exhaustive-deps": "warn", // Checks effect dependencies
    "import/extensions": "off"
    }
  }
  